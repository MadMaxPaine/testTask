# Вибір базового образу для Node.js
FROM node:16-alpine

# Встановлення робочої директорії всередині контейнера
WORKDIR /app

# Копіюємо package.json та package-lock.json для інсталяції залежностей
COPY package*.json ./

# Встановлюємо залежності
RUN npm install

# Копіюємо всі файли з поточної директорії в контейнер
COPY . .

# Порти, які будуть використовуватись всередині контейнера
EXPOSE 5000

# Оточення для запуску сервера
ENV NODE_ENV=production

# Команда для запуску сервера
CMD ["npm", "start"]
